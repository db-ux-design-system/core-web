{
	"trailingComma": "none",
	"bracketSpacing": true,
	"overrides": [
		{
			"files": ["*.js", "*.jsx", "*.cjs", "*.ts", "*.tsx"],
			"options": {
				"bracketSameLine": true
			}
		},
		{
			"files": [".env"],
			"options": {
				"parser": "sh"
			}
		}
	],
	"endOfLine": "auto",
	"plugins": ["prettier-plugin-sh", "prettier-plugin-pkg"]
}
