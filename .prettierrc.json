{
	"trailingComma": "es5",
	"singleQuote": false,
	"bracketSpacing": true,
	"overrides": [
		{
			"files": ["*.js", "*.jsx", "*.cjs", "*.ts", "*.tsx"],
			"options": {
				"bracketSameLine": true
			}
		},
		{
			"files": ["*.sh", ".env"],
			"options": {
				"parser": "sh"
			}
		},
		{
			"files": ["*.scss"],
			"options": {
				"trailingComma": "none"
			}
		},
		{
			"files": [
				"packages/components/src/**/*.ts",
				"packages/components/src/**/*.tsx"
			],
			"options": {
				"singleQuote": true
			}
		}
	],
	"endOfLine": "auto"
}
