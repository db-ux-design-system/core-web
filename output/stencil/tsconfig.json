{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"experimentalDecorators": true,
		"lib": ["dom", "es2022"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es2017",
		"jsx": "react",
		"jsxFactory": "h",
		"esModuleInterop": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "src/**/*.spec.tsx", "src/**/*.example.tsx", "src/**/*.showcase.tsx", "src/**/*.arg.types.ts"]
}
