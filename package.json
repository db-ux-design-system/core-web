{
  "name": "db-one",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "lint": "npm-run-all -p lint:*",
    "lint:markdownlint": "markdownlint -c .markdown-lint.yml **/*.md",
    "lint:stylelint": "stylelint **/*.scss",
    "lint:xo": "xo",
    "update:base:assets": "cpr ../base/assets packages/base/assets -o",
    "update:base:scripts": "cpr ../base/scripts packages/base/scripts -o",
    "update:base:scss": "cpr ../base/scss packages/base/scss -o",
    "update:base:tokens": "cpr ../base/tokens packages/base/tokens -o",
    "update:base:sd-config": "cpr ../base/style-dictionary.config.json packages/base/style-dictionary.config.json -o",
    "update:base:sd": "cpr ../base/style-dictionary.js packages/base/style-dictionary.js -o",
    "update:core:button": "cpr ../core/source/_patterns/01-elements/buttons/button.scss packages/core/src/components/button/button.scss -o",
    "update:base": "npm-run-all -p update:base:*",
    "update:core": "npm-run-all -p update:core:*"
  },
  "devDependencies": {
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "cpr": "3.0.1",
    "dotenv": "^16.0.3",
    "fs-extra": "^10.1.0",
    "husky": "8.0.2",
    "markdownlint-cli": "^0.32.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3",
    "replace-in-file": "^6.3.5",
    "typescript": "^4.7.3",
    "stylelint": "14.14.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-sass-guidelines": "9.0.1",
    "validate-branch-name": "^1.3.0",
    "xo": "^0.52.4"
  },
  "validate-branch-name": {
    "pattern": "((dbux-3)|(dependabot-)|^((test|feat|fix|chore|docs|refactor|style|ci|perf|[0-9]+)\\-[a-zA-Z0-9\\-]+)$)",
    "errorMsg": "There is something wrong with your branch name. You should rename your branch to a valid name and try again. See the Pattern below."
  },
  "bugs": {
    "url": "https://github.com/db-ui/one/issues"
  },
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/db-ui/one"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://db-ui.github.io/one/"
}
