{
  "name": "@db-ux/docs-cli",
  "version": "0.0.0",
  "type": "module",
  "description": "Cli to copy documentation for the DB UX Design System to use it for AI agents.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/db-ux-design-system/core-web.git"
  },
  "license": "Apache-2.0",
  "bin": {
    "@db-uxdocs-cli": "build/index.js"
  },
  "main": "build.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "copy-build": "npm-run-all copy-build:*",
    "copy-build:build": "cpr build ../../build-outputs/docs-cli/build -o",
    "copy-build:package.json": "cpr package.json ../../build-outputs/docs-cli/package.json -o",
    "copy-build:readme": "cpr README.md ../../build-outputs/docs-cli/README.md -o",
    "test": "vitest run --config vitest.config.ts",
    "test:cli": "tsx src/cli.ts"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "glob": "^11.0.2"
  },
  "devDependencies": {
    "cpr": "3.0.1",
    "esbuild": "0.25.5",
    "tsx": "^4.19.4",
    "vitest": "^3.2.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
