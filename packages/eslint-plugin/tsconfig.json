{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"lib": ["ES2022"],
		"moduleResolution": "nodenext",
		"declaration": true,
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
