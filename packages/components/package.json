{
  "name": "@db-ux/core-components",
  "version": "4.4.0",
  "type": "module",
  "description": "General technical components (styling, fonts and icons) out of DB UX Design System (Version 3)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/db-ux-design-system/core-web.git"
  },
  "author": "DB Systel GmbH",
  "license": "Apache-2.0",
  "files": [
    "CHANGELOG.md",
    "agent",
    "build"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build-components build-assets --sequential build-style:*",
    "build-assets": "cpr src build --overwrite --filter \"(.ts|.tsx|.md|.html)$\"",
    "build-components": "npm-run-all build:mitosis build-components:post build-components:docs",
    "build-components:docs": "pnpm --filter=@db-ux/wc-core-components run build:cem",
    "build-components:post": "tsx scripts/post-build/index.ts",
    "build-style:01_sass": "sass src:build --no-source-map --load-path=node_modules/ --load-path=../../node_modules/ --fatal-deprecation=mixed-decls",
    "build-style:02_postcss": "postcss build/**/*.css --replace",
    "build:mitosis": "npm-run-all --parallel build:mitosis:*",
    "build:mitosis:angular": "mitosis build --config configs/angular/mitosis.config.cjs",
    "build:mitosis:react": "mitosis build --config configs/react/mitosis.config.cjs",
    "build:mitosis:stencil": "mitosis build --config configs/stencil/mitosis.config.cjs",
    "build:mitosis:vue": "mitosis build --config configs/vue/mitosis.config.cjs",
    "compile:angular": "mitosis build --config configs/angular/mitosis.config.cjs && tsx scripts/exec/angular.ts",
    "compile:react": "mitosis build --config configs/react/mitosis.config.cjs && tsx scripts/exec/react.ts",
    "compile:stencil": "mitosis build --config configs/stencil/mitosis.config.cjs && tsx scripts/exec/stencil.ts",
    "compile:vue": "mitosis build --config configs/vue/mitosis.config.cjs && tsx scripts/exec/vue.ts",
    "copy-assets": "cpr ../foundations/assets build/assets -o",
    "dev:angular": "nodemon --watch src --watch scripts --ext tsx,ts --exec \"pnpm run compile:angular\"",
    "dev:html": "pnpm run copy-assets && pnpm run build-assets && pnpm run build-style:01_sass && vite --open",
    "dev:react": "nodemon --watch src --watch scripts --ext tsx,ts --exec \"pnpm run compile:react\"",
    "dev:scss": "pnpm run build-style:01_sass --watch --source-map",
    "dev:stencil": "nodemon --watch src --watch scripts --ext tsx,ts --exec \"pnpm run compile:stencil\"",
    "dev:vue": "nodemon --watch src --watch scripts --ext tsx,ts --exec \"pnpm run compile:vue\"",
    "generate:agent": "mitosis build --config=configs/mitosis.agent.config.cjs",
    "generate:component": "hygen mitosis new",
    "generate:docs": "hygen update-docs new",
    "generate:showcase": "mitosis build --config=configs/mitosis.showcase.config.cjs",
    "generate:stories": "mitosis build --config=configs/mitosis.storybook.config.cjs",
    "prepack": "pnpm run copy-assets",
    "start": "nodemon --watch src --watch scripts --watch scripts --ext js,tsx,ts,scss,json --exec \"pnpm run build\""
  },
  "dependencies": {
    "@db-ux/core-foundations": "workspace:*"
  },
  "devDependencies": {
    "@builder.io/eslint-plugin-mitosis": "0.0.17",
    "@builder.io/mitosis": "0.13.0",
    "@builder.io/mitosis-cli": "0.13.0",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "cpr": "3.0.1",
    "cssnano": "7.1.2",
    "hygen": "6.2.11",
    "nodemon": "3.1.11",
    "sass": "1.85.1",
    "sassdoc": "2.7.4",
    "storybook": "10.2.4",
    "tsx": "4.21.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
