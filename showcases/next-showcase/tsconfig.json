{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"strictNullChecks": true,
		"downlevelIteration": true,
		"target": "ES2017",
		"paths": {
			"@components": ["../../packages/react-core-components/src"],
			"@components/src/*": ["../../packages/react-core-components/src/*"],
			"@components/components/*": [
				"../../packages/react-core-components/src/components/*"
			]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
