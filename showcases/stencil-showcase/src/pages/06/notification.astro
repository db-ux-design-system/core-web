---
import DefaultLayout from '../../layouts/default/DefaultLayout.astro';
import DefaultComponent from '../../components/default/DefaultComponent.astro';
import defaultComponentVariants from '../../../../shared/notification.json';
import type { DBNotificationProps } from '@components';
import VariantList from '../../components/default/VariantList.astro';
import type { DefaultComponentVariants } from '../../../../shared/default-component-data.ts';
import { DBNotification, DBLink } from '@components';
---

<DefaultLayout>
	<DefaultComponent title="DBNotification" variants={defaultComponentVariants}>
		{(variant: DefaultComponentVariants) => (
			<VariantList {...variant}>
				{({ children, link, img, ...props }: DBNotificationProps & { link: boolean; img: boolean }) => (
					<DBNotification {...props}>
						{children}
						{link && (
							<DBLink slot="link" href="#">
								Textlink
							</DBLink>
						)}
						{img && (
							<img
								slot="image"
								src="/assets/images/placeholder.jpg"
								alt="this is a fancy placeholder"
							/>
						)}
					</DBNotification>
				)}
			</VariantList>
		)}
	</DefaultComponent>
</DefaultLayout>
