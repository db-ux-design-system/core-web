---
import DefaultLayout from '../../layouts/default/DefaultLayout.astro';
import DefaultComponent from '../../components/default/DefaultComponent.astro';
import defaultComponentVariants from '../../../../shared/accordion-item.json';
import type { DBAccordionItemProps } from '@components';
import VariantList from '../../components/default/VariantList.astro';
import type { DefaultComponentVariants } from '../../../../shared/default-component-data.ts';
import { DBAccordionItem } from '@components';
---

<DefaultLayout>
	<DefaultComponent title="DBAccordionItem" variants={defaultComponentVariants}
		>{
			(variant: DefaultComponentVariants) => (
				<VariantList {...variant}>
					{({ children, open, ...props }: DBAccordionItemProps & { open?: boolean }) => (
						<DBAccordionItem defaultOpen={open} {...props}>{children}</DBAccordionItem>
					)}
				</VariantList>
			)
		}</DefaultComponent
	>
</DefaultLayout>
