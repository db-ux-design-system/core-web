---
import DefaultLayout from '../../layouts/default/DefaultLayout.astro';
import DefaultComponent from '../../components/default/DefaultComponent.astro';
import defaultComponentVariants from '../../../../shared/infotext.json';
import type { DBInfotextProps } from '@components';
import { getPropsAsAttributes, getVariantsWithExamples } from '../../utils';

const exampleFn = ({ semantic, size, icon, children, showIcon }: DBInfotextProps) => {
	const props = { semantic, size, icon, 'show-icon': showIcon };

	return `<db-infotext ${getPropsAsAttributes(props)}>${children}</db-infotext>`;
};
const variants = getVariantsWithExamples<DBInfotextProps>(defaultComponentVariants, exampleFn);
---

<DefaultLayout>
	<DefaultComponent title="DBInfotext" variants={variants} />
</DefaultLayout>
