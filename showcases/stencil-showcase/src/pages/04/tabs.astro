---
import DefaultLayout from '../../layouts/default/DefaultLayout.astro';
import DefaultComponent from '../../components/default/DefaultComponent.astro';
import defaultComponentVariants from '../../../../shared/tabs.json';
import type { DBTabsProps } from '@components';
import VariantList from '../../components/default/VariantList.astro';
import type { DefaultComponentVariants } from '../../../../shared/default-component-data.ts';
import { DBTabs, DBTabList, DBTabItem, DBTabPanel, DBInfotext } from '@components';
---

<DefaultLayout>
	<DefaultComponent title="DBTabs" variants={defaultComponentVariants}
		>{
			(variant: DefaultComponentVariants) => (
				<VariantList {...variant}>
					{({ children, overflow, ...props }: DBTabsProps & { overflow?: boolean }) => (
						<div className="w-full">
							<DBInfotext icon="none" size="small" semantic="informational">
								{children}:
							</DBInfotext>
							<DBTabs arrowScrollDistance={75} {...props}>
								<DBTabList>
									<DBTabItem>Test 1</DBTabItem>
									<DBTabItem>Test 2</DBTabItem>
									<DBTabItem>Test 3</DBTabItem>
									{overflow && (
										<>
											<DBTabItem>Test 4</DBTabItem>
											<DBTabItem>Test 5</DBTabItem>
										</>
									)}
								</DBTabList>
								<DBTabPanel>Tab Panel 1</DBTabPanel>
								<DBTabPanel>Tab Panel 2</DBTabPanel>
								<DBTabPanel>Tab Panel 3</DBTabPanel>
								{overflow && (
									<>
										<DBTabPanel>Tab Panel 4</DBTabPanel>
										<DBTabPanel>Tab Panel 5</DBTabPanel>
									</>
								)}
							</DBTabs>
						</div>
					)}
				</VariantList>
			)
		}</DefaultComponent
	>
</DefaultLayout>
