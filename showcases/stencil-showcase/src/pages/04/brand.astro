---
import DefaultLayout from '../../layouts/default/DefaultLayout.astro';
import DefaultComponent from '../../components/default/DefaultComponent.astro';
import defaultComponentVariants from '../../../../shared/brand.json';
import type { DBBrandProps } from '@components';
import VariantList from '../../components/default/VariantList.astro';
import type { DefaultComponentVariants } from '../../../../shared/default-component-data.ts';
import { DBBrand } from '@components';
---

<DefaultLayout>
	<DefaultComponent title="DBBrand" variants={defaultComponentVariants}
		>{
			(variant: DefaultComponentVariants) => (
				<VariantList {...variant}>
					{({ children, customLogo, ...props }: DBBrandProps & { customLogo?: boolean }) => (
						<DBBrand {...props}>
							{customLogo && <img src="/assets/images/placeholder.jpg" alt="this is a fancy placeholder logo" />}
							{children}
						</DBBrand>
					)}
				</VariantList>
			)
		}</DefaultComponent
	>
</DefaultLayout>
