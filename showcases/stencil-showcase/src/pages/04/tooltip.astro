---
import DefaultLayout from '../../layouts/default/DefaultLayout.astro';
import DefaultComponent from '../../components/default/DefaultComponent.astro';
import defaultComponentVariants from '../../../../shared/tooltip.json';
import type { DBTooltipProps } from '@components';
import { getPropsAsAttributes, getVariantsWithExamples } from '../../utils';

const exampleFn = ({
	children,
	width,
	emphasis,
	placement,
	delay,
	content,
	animation,
	showArrow,
}: DBTooltipProps & { content?: string }) => {
	const props = { width, emphasis, placement, delay, animation, 'show-arrow': showArrow };

	return `
		<db-button>${children}<db-tooltip ${getPropsAsAttributes(props)}>
				${content}
			</db-tooltip>
		</db-button>
	`;
};
const variants = getVariantsWithExamples<DBTooltipProps>(defaultComponentVariants, exampleFn);
---

<DefaultLayout>
	<DefaultComponent title="DBTooltip" variants={variants} />
</DefaultLayout>
