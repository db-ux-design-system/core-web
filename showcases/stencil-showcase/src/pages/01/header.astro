---
import DefaultLayout from '../../layouts/default/DefaultLayout.astro';
import DefaultComponent from '../../components/default/DefaultComponent.astro';
import defaultComponentVariants from '../../../../shared/header.json';
import type { DBHeaderProps } from '@components';
import VariantList from '../../components/default/VariantList.astro';
import type { DefaultComponentVariants } from '../../../../shared/default-component-data.ts';
import { DBHeader, DBBrand, DBLink, DBButton, DBNavigation, DBNavigationItem } from '@components';
---

<DefaultLayout>
	<DefaultComponent title="DBHeader" variants={defaultComponentVariants}
		>{
			(variant: DefaultComponentVariants) => (
				<VariantList {...variant}>
					{({
						example,
						withName,
						withNavigation,
						...props
					}: DBHeaderProps & {
						example?: boolean;
						withName?: boolean;
						withNavigation?: boolean;
					}) => (
						<DBHeader {...props}>
							<DBBrand slot="brand" title="DBHeader">
								{!example || withName ? 'DBHeader' : ''}
							</DBBrand>
							{!example && (
								<>
									<div slot="metaNavigation">
										<DBLink href="#">Imprint</DBLink>
										<DBLink href="#">Help</DBLink>
									</div>
									<DBButton
										slot="primaryAction"
										icon="magnifying_glass"
										variant="ghost"
										noText={true}
									>
										Search
									</DBButton>
									<div slot="secondaryAction">
										<DBButton icon="x_placeholder" variant="ghost" noText={true}>
											Profile
										</DBButton>
										<DBButton icon="x_placeholder" variant="ghost" noText={true}>
											Notification
										</DBButton>
										<DBButton icon="x_placeholder" variant="ghost" noText={true}>
											Help
										</DBButton>
									</div>
								</>
							)}
							{(!example || withNavigation) && (
								<DBNavigation aria-label="Navigation">
									<DBNavigationItem hideSubNavigation={true} icon="x_placeholder">
										<a href="#">Link</a>
									</DBNavigationItem>
									<DBNavigationItem  hideSubNavigation={true} disabled={true}>
										<a href="#">Link disabled</a>
									</DBNavigationItem>
								</DBNavigation>
							)}
						</DBHeader>
					)}
				</VariantList>
			)
		}</DefaultComponent
	>
</DefaultLayout>
