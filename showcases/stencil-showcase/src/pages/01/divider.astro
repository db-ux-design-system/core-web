---
import DefaultLayout from '../../layouts/default/DefaultLayout.astro';
import DefaultComponent from '../../components/default/DefaultComponent.astro';
import defaultComponentVariants from '../../../../shared/divider.json';
import type { DBDividerProps } from '@components';
import { getPropsAsAttributes, getVariantsWithExamples } from '../../utils';

const exampleFn = ({ variant, emphasis, children, width }: DBDividerProps) => {
	const props = { variant, emphasis, width };

	return `
		<db-infotext size="small" semantic="informational">
			${children}
		</db-infotext>
		<db-divider ${getPropsAsAttributes(props)}></db-divider>
	`;
};
const variants = getVariantsWithExamples<DBDividerProps>(defaultComponentVariants, exampleFn);
---

<DefaultLayout>
	<DefaultComponent title="DBDivider" variants={variants} />
</DefaultLayout>
