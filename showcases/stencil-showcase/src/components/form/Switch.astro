---
import { DBSwitch } from '@components';
import FormWrapper from './FormWrapper.astro';
---

<FormWrapper value="true" id="switch">
	<DBSwitch name="switch" checked data-id="switch">Switch</DBSwitch>
</FormWrapper>

<script>
	const switchEl = document.querySelector('[data-id="switch"]');
	const valueDisplay = document.getElementById('switch-value-display');

	switchEl?.addEventListener('change', (e: any) => {
		if (valueDisplay) valueDisplay.textContent = e.target.checked;
	});
</script>
