{
  "name": "react-showcase",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:01_tsc": "tsc",
    "build:02_vite": "vite build",
    "dev": "vite --open",
    "preview": "npx http-server ../../build-showcases",
    "regenerate:screenshots": "cross-env showcase=react-showcase npx playwright test -c ../playwright.config.ts --update-snapshots",
    "start": "vite",
    "test:e2e": "cross-env showcase=react-showcase npx playwright test --config=../playwright.config.ts",
    "test:screen-reader-local:macos": "cross-env showcase=react-showcase npm run test:screen-reader:macos",
    "test:screen-reader-local:windows": "cross-env showcase=react-showcase npm run test:screen-reader:windows",
    "test:screen-reader:macos": "npx playwright test --config=../playwright.screen-reader.macos.ts",
    "test:screen-reader:windows": "npx playwright test --config=../playwright.screen-reader.windows.ts"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "6.23.1",
    "sa11y": "3.1.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  }
}
