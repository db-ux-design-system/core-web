{
  "name": "db-patternhub",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm-run-all generate copy build:*",
    "build:app": "next build",
    "build:copy": "cpr out ../../build-showcases/patternhub -o",
    "copy": "npm-run-all copy:*",
    "copy:components": "cpr ../../output/react/src ./components/src -o",
    "copy:docs": "cpr ../../docs ./public/docs -o",
    "dev": "cross-env NEXT_PUBLIC_BASE_PATH=/mono/sub npm-run-all generate copy -p open next:dev",
    "generate": "npm-run-all generate:*",
    "generate:jsx": "node --experimental-specifier-resolution=node scripts/generate-example-jsx.js",
    "generate:parse-jsx": "babel  scripts/generated --out-dir scripts/generated --extensions \".jsx\" --presets=@babel/preset-react",
    "lint": "next lint",
    "next:dev": "next dev",
    "next:start": "next start",
    "open": "open-cli http://localhost:3000/mono/sub",
    "postcopy:components": "tsc -p ./components/src --sourceMap false && node --experimental-specifier-resolution=node scripts/generate-docs-mdx.js",
    "prebuild:app": "cpr ../../node_modules/iframe-resizer/js/ public/iframe-resizer -o",
    "start": "cross-env NEXT_PUBLIC_BASE_PATH=/mono/sub npm-run-all generate copy next:start"
  },
  "dependencies": {
    "@code-hike/mdx": "^0.9.0",
    "dompurify": "3.0.6",
    "next": "14.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remark-gfm": "4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.23.4",
    "@babel/preset-react": "7.23.3",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@next/mdx": "^14.0.3",
    "@types/dompurify": "3.0.5",
    "@types/node": "20.10.3",
    "@types/react": "18.2.41",
    "@types/react-dom": "18.2.17",
    "eslint": "8.55.0",
    "eslint-config-next": "14.0.3",
    "iframe-resizer": "^4.3.9",
    "open-cli": "^7.2.0",
    "sass": "^1.69.5",
    "typescript": "4.9.5"
  }
}
